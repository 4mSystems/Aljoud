<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="160"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="100">
            <shape
                android:shape="line"
                android:top="1dip">
                <stroke
                    android:width="4dip"
                    android:color="@color/red" />
            </shape>
        </rotate>
    </item>
</layer-list>